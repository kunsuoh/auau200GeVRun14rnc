<job fileListSyntax="paths" maxFilesPerProcess="150" simulateSubmission="false">
    
    <stdout discard="true" />
    <stderr URL="file:./err/$JOBID.err" />
    
    <Generator>
        <Location>./report/</Location>
        <ScriptLocation>./csh/</ScriptLocation>
        <ListLocation>./list/</ListLocation>
    </Generator>
    
    <command>
        starver SL15c
        
        root4star -q -b -l StRoot/macros/runPicoNpeAnaMaker.C\(\"$FILELIST\",\"$JOBID.root\"\) &gt;&amp; ${JOBID}.log
        tar -zcvf ${JOBID}.log.tgz ${JOBID}.log
    </command>
    
    <input URL="filelist:/global/homes/k/kunsu/myAnalysis/&listOfFiles;" />
    <output fromScratch="*.root" toURL="/global/homes/k/kunsu/myAnalysis/production/" />
    <output fromScratch="*.log.tgz" toURL="/global/homes/k/kunsu/myAnalysis/log/" />
    
    <SandBox installer="ZIP">
        <Package name="LocalLibraries">
            <File>file:./StRoot/</File>
            <File>file:./run14AuAu200GeVPrescales/</File>
            <File>file:./picoList_bad_MB.list</File>
            <File>file:./.sl64_gcc447/</File>
        </Package>
    </SandBox>
    
</job>
